---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
const { color } = Astro.props;
---

<header>
  <div class="model">
    <a href={color ? "/#features" : "#features"}>خدمات</a>
    <HeaderLink href="/blog">مدونة</HeaderLink>
    <HeaderLink href="/about">من نحن</HeaderLink>
    <a href={color ? "/#pricing" : "#pricing"}>السعر</a>
  </div>
  <nav>
    <h2>
      <a style={{ color: color }} href="/">
        <!-- <img id="logo" src="logo2.png" alt=""> -->
        {SITE_TITLE}
      </a>
    </h2>

    <div class="internal-links">
      <a style={{ color: color }} href={color ? "/#features" : "#features"}
        >خدمات</a
      >
      <HeaderLink style={{ color: color }} href="/blog">مدونة</HeaderLink>
      <HeaderLink style={{ color: color }} href="/about">من نحن</HeaderLink>
      <a style={{ color: color }} href={color ? "/#pricing" : "#pricing"}>السعر</a>

      <div class="menu">
        <span class:list={["menu-line", { green: color }]}> </span>
      </div>
    </div>
  </nav>
</header>
<style>
  /* #logo{
		width:60px;
	} */
  .model {
    position: fixed;
    left: -100%;
    top: 0;
    width: 100%;
    height: 100%;
    background: var(--main-bg-color);
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.3s linear;
  }
  .model.open {
    left: 0%;
  }

  .model a {
    color: white;
    text-decoration: none;
    font-size: 2.5rem;
  }

  header {
    margin: 1rem 2rem;
    padding: 0.5rem;
    color: white;
  }
  nav h2 a {
    margin: 0;
    font-size: 3rem;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    color: white;
    font-size: 2.2rem;
    text-decoration: none;
  }
  .internal-links a {
    padding: 0.5rem;
    margin-left: 1rem;
    margin-right: 1rem;
    font-weight: 300;
    display: none;
  }
  .internal-links a:last-child {
    margin-left: 0;
  }
  .menu {
    display: inline-block;
    cursor: pointer;
    position: relative;
    z-index: 2;
    transition: all 0.3s ease-in-out;
  }
  span.menu-line {
    display: inline-block;
    position: relative;
    width: 40px;
    height: 5px;
    background: white;
    border-radius: 20px;
    transition: all 0.3s ease-in-out;
  }
  span.menu-line.green,
  span.menu-line.green::after,
  span.menu-line.green::before {
    background-color: var(--main-bg-color);
  }

  .menu.open span.menu-line.green,
  .menu.open span.menu-line.green::after,
  .menu.open span.menu-line.green::before {
    background-color: white;
  }

  .menu.open span.menu-line,
  .menu.open span.menu-line::after,
  .menu.open span.menu-line::before {
    transform: rotate(90deg);
  }
  span.menu-line::after,
  span.menu-line::before {
    content: "";
    position: absolute;
    width: 40px;
    height: 5px;
    background: white;
    border-radius: 20px;
    transition: all 0.3s ease-in-out;
  }
  span.menu-line::after {
    top: 11px;
  }
  span.menu-line::before {
    top: -11px;
  }

  @media screen and (min-width: 600px) {
    .menu {
      display: none;
    }
    .model {
      display: none;
    }
    .internal-links a {
      display: inline-block;
    }
  }
</style>
<script>
  const links = document.querySelectorAll("a");
  const model = document.querySelector(".model");
  const menuBtn = document.querySelector(".menu");
  links?.forEach((e) => {
    e.addEventListener("click", (myEvent) => {
      menuBtn?.classList.toggle("open");
      model?.classList.toggle("open");
    });
  });
  menuBtn?.addEventListener("click", (e) => {
    menuBtn.classList.toggle("open");
    model?.classList.toggle("open");
  });
</script>
